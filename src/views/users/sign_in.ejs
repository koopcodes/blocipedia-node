<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h1>Sign in</h1>

      <form action="/users/sign_in" method="post">

        <div class="form-group">
          <label for="name">Username</label>
          <input type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter Username" autocomplete="on">
          <small class="text-muted" id="nameHelp">Alphanumeric, no special characters</small>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password"  auto-complete="current-password">
          <small class="text-muted" id="passwordHelp">Password you chose at Sign up</small>
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
